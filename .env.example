# Environment variables for Legal Platform Django Project

# Django settings
DJANGO_SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True

# =============================================================================
# AI PROVIDERS (Choose one or both - Groq is recommended as PRIMARY)
# =============================================================================

# Groq API Key (PRIMARY - Ultra-fast Llama 3.1 inference)
# Get your FREE API key at: https://console.groq.com/keys
# Benefits: 300+ tokens/second, FREE during beta, 128k context window
GROQ_API_KEY=your_groq_api_key_here

# Gemini AI API Key (FALLBACK - Google's AI)
# Get your API key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# PAYMENT GATEWAY - Razorpay
# =============================================================================
# Get keys from: https://dashboard.razorpay.com/app/keys
# Test mode keys start with 'rzp_test_', Live keys start with 'rzp_live_'
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_key_here

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
# For Gmail: Use an "App Password" from https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# SMS GATEWAY - Fast2SMS (India)
# =============================================================================
# Get key from: https://www.fast2sms.com/
SMS_API_KEY=your_fast2sms_api_key
SMS_SENDER_ID=LEGAID

# =============================================================================
# REDIS (for production WebSocket/Channels)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# WebRTC TURN Server (optional - for better connectivity)
# =============================================================================
# TURN_SERVER_URL=turn:your.turn.server:3478
# TURN_USERNAME=username
# TURN_PASSWORD=password

